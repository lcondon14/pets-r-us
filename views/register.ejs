<div class="reg-container">
<h2>Registration Form</h2>
    <p>Register to schedule appointments online!</p>

    <div class="contact-container"></div>

    <form action="/register" method="POST">
        <div class="form-field">
            <label for="customerId">Customer ID:</label>
            <input type="text" class="input" id="customerId" name="customerId" id="customerId" required>
        </div>

        <div class="form-field">
            <label for="email">Email:</label>
            <input type="text" class="input" id="email" name="email" id="email" required>
        </div>

        <div class="form-field">
            <input type="submit" value="Register Customer" class="btn btn-primary">
        </div>
    </form>
